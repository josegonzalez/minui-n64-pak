[controls]
overlay = clear
a = a # B -> A button
x = b # Y -> B button

guide = esc
r2 = hold_state hotkey1
select = hold_state hotkey2

[controls:hotkey1]
overlay = parent

y = i # X -> C up
x = j # Y -> C left
a = k # B -> C down
b = l # A -> C right

[controls:hotkey2]
overlay = parent

l1 = f12 # Screenshot
l2 = f5  # Save State
r2 = f7  # Load State

b = f11 # A -> Speed up by 50%
a = f10 # B -> Slow down by 50%
y = p   # Y -> Toggle pause
x = m   # X -> Toggle mute
