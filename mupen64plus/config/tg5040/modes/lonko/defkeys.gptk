#Editd by Lonko
#Xbox360 Controller Button Layout (Swap a/b & x/y)
[controls]
overlay = clear
a = a # B -> A button
x = b # Y -> B button

r2 = hold_state hotkey1
select = hold_state hotkey2

r3 = f5 # Save State
l3 = f7 # Load State

[controls:hotkey1]
overlay = parent

y = i # X -> C up
x = j # Y -> C left
a = k # B -> C down
b = l # A -> C right

[controls:hotkey2]
overlay = parent

select = y # Screenshot

r1 = f5 # Save State
l1 = f7 # Load State
